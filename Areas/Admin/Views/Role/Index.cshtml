@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,WebTheCao
@{ 
    ViewBag.Title = "Phân quyền";
}

<div class="alert alert-info align-center">
    Quản lý phân quyền
</div>
<div class="clearfix">
    <div class="card">
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <table class="table table-sm table-bordered table-bordered">
                <thead>


                    <tr>
                        <th width="15%">ID</th>
                        <th width="15%">Tên quyền</th>
                        <th>Tài khoản</th>
                        <th>###</th>
                    </tr>
                </thead>
                @if (Model.Count() == 0)
                {
                <tbody>
                    <tr><td colspan="4" class="text-center">Không có quyền nào</td></tr>
                </tbody>
               
                }
                else
                {
                    foreach (var role in Model)
                    {
                <tbody>
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td identity-role="@role.Id"></td>
                        <td width="15%">
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit"
                                   asp-route-id="@role.Id">Sửa</a>
                                <button type="submit"
                                        class="btn btn-sm btn-danger">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
                    }
                }
            </table>
        </div>
    </div>
</div>

<a class="btn btn-primary" asp-action="Create">Thêm mới</a>
