<div class="header">
    <h3 id="roomHeader">Chỉnh sửa</h3>
</div>

<div class="body">
    <form role="form" id="frmUpdate">
        <input type="hidden" id="EditId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên bài viết</label>
                <input type="text" class="form-control" name="EditName" id="EditName">
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <input type="file" accept="png/*" name="EditImage" value="Chọn hình" class="btn btn-primary item-img" />
            </div>
            <div class="form-inline">
                <img src="" id="EditThumbnail"  class="img" style="margin-top:20px" width="100" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Phone">Nội dung </label>
                <textarea rows="10" type="text" class="form-control" name="EditContent" id="EditContent"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Nguồn tham khảo</label>
                <input type="text" class="form-control" name="Via" id="EditVia" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Đường dẫn tham khảo</label>
                <input type="text" class="form-control" name="Via" id="EditLinkVia" />
            </div>
        </div>
        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="EditStatus" checked><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>

    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="SaveEdit">Lưu thay đổi</button>
    </div>
</div>
