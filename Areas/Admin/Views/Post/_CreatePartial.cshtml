<div class="header">
    <h3 id="roomHeader">Tạo mới bài viết</h3>
</div>
<div class="body">
    <form role="form" id="frmAddNew">
        <input type="hidden" id="txtId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên bài viết</label>
                <input type="text" class="form-control" name="Name" id="txtName">
                <span class="validate"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <input type="file" accept="png/*" name="Image" value="Chọn hình" class="btn btn-primary item-img" />
            </div>
            <div class="form-inline">
                <img src="" id="ImgThumbnail" class="img" style="margin-top:20px" width="100" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Nội dung</label>
                <textarea rows="10" type="text" class="form-control" name="Content" id="txtContent"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Nguồn tham khảo</label>
                <input type="text" class="form-control" name="Via" id="txtVia" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Đường dẫn tham khảo</label>
                <input type="text" class="form-control" name="Via" id="txtLinkVia" />
            </div>
        </div>
        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="txtStatus" checked><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>
 
    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="btnAdd">Tạo mới</button>
    </div>
</div>