@model IEnumerable<FeedbackData>
@using WebTheCao.Areas.Admin.ViewModels
<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-envelope-o"></i>
        @if (Model.Count() != 0)
        {
            <span class="label label-success">@Model.Count()</span>
        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Bạn có @Model.Count() phản hồi!</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                @foreach (var item in Model)
                {
                    <li>
                        <!-- start message -->
                        <a href="/admin/feedback/compose?id=@item.ID">
                            <div class="pull-left">
                                   
                                <img src="@item.urlAvatar" class="img-circle" alt="@item.UserName">
                            </div>
                            <h4>
                                @item.UserName
                                <small><i class="fa fa-clock-o"></i>@item.time</small>
                            </h4>
                            <p>@item.Subject</p>
                        </a>
                    </li>
                }

            </ul>
        </li>
        <li class="footer"><a href="/admin/feedback/mailbox?opt=compose">Xem tất cả</a></li>
    </ul>
</li>