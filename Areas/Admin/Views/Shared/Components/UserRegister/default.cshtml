@model UserRegiterViewModels
@using WebTheCao.Areas.Admin.ViewModels

@{ 
    var count = Model.Users.Count();
}

<li class="dropdown notifications-menu realtime">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-users"></i>
        @if (count != 0)
        {
            <span class="label label-warning">@count</span>

        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Bạn có @count người dùng mới</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                @foreach (var user in Model.Users)
                {
                    <li>
                        <a href="#" class="isread" data-id="@user.Id">
                            <i class="fa fa-users text-aqua"></i> @user.UserName vừa đăng ký.
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="footer"><a href="#" class="isreadall">Xem tất cả</a></li>
    </ul>
</li>
