<div class="header">
    <h3 id="roomHeader">Tạo mới slide</h3>
</div>
<div class="body">
    <form role="form" id="frmAddNew">
        <input type="hidden" id="txtId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên</label>
                <input type="text" class="form-control" name="Name" id="txtName">
                <span class="validate"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <input type="button" value="Chọn hình" class="btn btn-primary UploadModal" />
            </div>
            <div class="form-inline">
                <img src="" id="txtImage" name="Image" class="Image" style="margin-top:20px" width="100" />
            </div>

        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="DisplayOrder">Thứ tự hiển thị </label>
                <input type="number" class="form-control" name="DisplayOrder" id="txtDisplayOrder">
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Captant">Tiêu đề </label>
                <input type="text" class="form-control" name="Captant" id="txtCaptant">
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Captant">Vị trí Tiêu đề </label>
                <select id="txtCaptantPos" name="CaptantPos">
                    <option value="top" selected>Trên</option>
                    <option value="bottom">Dưới</option>
                    <option value="left">Bên trái</option>
                    <option value="right">Bên phải</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Content">Nội dung </label>
                <input type="text" class="form-control" name="Content" id="txtContent">
            </div>
        </div>
        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="txtStatus" checked><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>
    <br />
    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="btnAdd">Tạo mới</button>
    </div>
</div>