<div class="header">
    <h3 id="Header">Chỉnh sửa</h3>
</div>

<div class="body">
    <form role="form" id="frmUpdate">
        <input type="hidden" id="EditId">
        <div class="form-group">
            <div class="form-line">
                <label for="Name">Tên </label>
                <input type="text" class="form-control" name="EditName" id="EditName">
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <input type="button" value="Chọn hình" class="btn btn-primary UploadModal" />
            </div>
            <div class="form-inline">
                <img src="" id="EditImage" name="Image" class="Image" style="margin-top:20px" width="100" />
            </div>

        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="DisplayOrder">Thứ tự hiển thị</label>
                <input type="number" class="form-control" name="EditDisplayOrder" id="EditDisplayOrder" />
            </div>
        </div>     <div class="form-group">
            <div class="form-line">
                <label for="Captant">Tiêu đề</label>
                <input type="text" class="form-control" name="EditCaptant" id="EditCaptant" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="Captant">Vị trí Tiêu đề </label>
                <select id="EditCaptantPos">
                    <option value="top" selected>Trên</option>
                    <option value="bottom">Dưới</option>
                    <option value="left">Bên trái</option>
                    <option value="right">Bên phải</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="form-line">
                <label for="EditContent">Nội dung</label>
                <input type="text" class="form-control" name="EditContent" id="EditContent">
            </div>
        </div>

        <div class="form-group">
            <div class="demo-switch-title">Trạng thái</div>
            <div class="switch">
                <label><input type="checkbox" id="EditStatus"><span class="lever switch-col-lime"></span></label>
            </div>
        </div>
    </form>
    <br />
    <br />
    <div class="form-group">

        <button type="button" class="btn btn-secondary waves-effect" id="btnCancle" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary waves-effect" id="SaveEdit">Lưu thay đổi</button>
    </div>
</div>