@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Trả lời thư";
}
@using  WebTheCao.Areas.Admin.ViewModels
@model FeedbackData
<section class="content">
    <div class="row">

        @await Html.PartialAsync("mailNavigation")
        <!-- /.col -->
        <div class="col-md-9">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Trả lời tin nhắn cho tài khoản @Model.UserName</h3>

                </div>
                @if (ViewBag.status==false)
                {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Thông báo!</h4>
                    @ViewBag.message
                </div>
                }
              
            </div>
            <div class="box box-widget collapsed-box">
                <div class="box-header with-border">
                    <div class="user-block">
                        <img class="img-circle" src="@Model.urlAvatar" alt="User Image">
                        <span class="username"><a href="#" data-widget="collapse">@Model.UserName</a></span>
                    </div>
                    <div class="box-tools">
                        <span class="uploadItems label label-primary">@Model.time</span>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="">
                    <div class="jumbotron-fluid">@Model.Message</div>
                </div>

            </div>
            <!-- /.box-header -->
            <form asp-action="compose" method="post">
                <div asp-validation-summary="All"></div>
                <div class="box-body">
                    <div class="form-group">
                        <input  asp-for="ID" name="ID" class="hidden" value="@Model.ID" />
                        <input class="form-control" asp-for="Email" placeholder="Đến:" id="txtEmail" value="@Model.Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Subject" placeholder="Subject:" id="txtSubject" value="Tin nhắn trả lời từ website http://www.nopthegiare.com @Model.Subject">
                        <span asp-validation-for="Subject"></span>
                    </div>

                    <div class="form-group">
                        <textarea id="txtContent" class="form-control" asp-for="Message"></textarea>
                        <span asp-validation-for="Message"></span>
                    </div>
                    <div class="form-group">
                        <label >Chờ xử lý</label>
                        <input type="checkbox" asp-for="IsWaiting" name="name" value="" />
                        
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-default"><i class="fa fa-pencil"></i> Draft</button>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Send</button>
                    </div>
                    <button type="reset" class="btn btn-default"><i class="fa fa-times"></i> Hủy</button>
                </div>
                <!-- /.box-footer -->
            </form>

        </div>
        <!-- /. box -->
    </div>
    <!-- /.col -->
    <!-- /.row -->
    <!-- /.row -->
</section>

