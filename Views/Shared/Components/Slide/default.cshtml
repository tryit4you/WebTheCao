@model WebTheCao.ViewModels.BannerViewModels

<div class="no-pad-bot">
    @if (Model.Notification != null)
    {
        <div class="notifications">
            <div class="notifi-content">

                <h3>@Model.Notification.Name</h3>
                <p>

                    @Html.Raw(Model.Notification.Content)
                </p>
            </div>
        </div>
    }

    <div class="slider">


        <div class="slider">
            <ul class="slides">
                @foreach (var slide in Model.Slides)
                {
                    <li>
                        <img src="@slide.Image"> <!-- random image -->
                        <div class="caption @slide.CaptantPostion-align">
                            <h3>@slide.Captant</h3>
                            <h5 class="text-desc">@Html.Raw(slide.Content)</h5>
                        </div>
                    </li>
                }
            </ul>
            <a class="carousel-control-prev" href="#next" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon waves-effect waves-light" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#prev" role="button" data-slide="next">
                <span class="carousel-control-next-icon  waves-effect waves-light" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <a class="carousel-control-prev" href="#next" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon waves-effect waves-light" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#prev" role="button" data-slide="next">
            <span class="carousel-control-next-icon  waves-effect waves-light" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>