@model ResetPasswordViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    ViewData["Title"] = "khôi phục mật khẩu";
}
<div class="container col-md-12">

    <div class="card" style="margin:10px 20%">
        <div class="card-header">
            <h5>Khôi phục mật khẩu</h5>
        </div>
        <div class="card-body">
            <form asp-controller="UserAccount" asp-action="ResetPassword" method="post" class="form-group">

                <input type="hidden" asp-for="Token" />
                <table id="reset-password">
                    <tr>

                        <th>
                            <label asp-for="UserName" class="control-label">
                                Tên tài khoản
                            </label>
                        </th>
                        <td><input asp-for="UserName" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="Password" class="control-label">
                                Mật khẩu mới
                            </label>
                        </th>
                        <td><input asp-for="Password" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="ConfirmPassword" class="control-label">
                                Xác nhận
                            </label>
                        </th>
                        <td><input asp-for="ConfirmPassword" class="form-control" /></td>
                    </tr>

                    <tr>

                        <td colspan="4" style="text-align:center;">
                            <input type="submit" class="btn btn-primary mt-4"
                                   value="Khôi phục mật khẩu" />
                        </td>
                    </tr>
                </table>

                <div asp-validation-summary="All" class="text-danger"></div>

            </form>
        </div>

    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <p>@ViewBag.Message</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
